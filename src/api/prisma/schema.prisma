generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the User model
model User {
  id                   Int      @id @default(autoincrement())
  username             String   @unique
  password             String

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  profile              UserProfile?
  activityLogs         UserActivityLog[]
  weeklyStatistics     UserWeekStatistics[]
}


// Define the User Profile model
model UserProfile {
  id                    Int       @id @default(autoincrement())
  user                  User      @relation(fields: [userId], references: [id])
  userId                Int
  cigarettesPerDay      Int
  pricePerPackage       Float
  cigarettesPerPackage  Int

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}


// Define the UserActivityLog model
model UserActivityLog {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  smokingTime   DateTime
  // Add other fields as needed
  
  createdAt     DateTime  @default(now())
}


// Define the UserWeekStatistics model
model UserWeekStatistics {
  id                    Int       @id @default(autoincrement())
  weekNumber            Int
  startDate             DateTime
  endDate               DateTime
  user                  User      @relation(fields: [userId], references: [id])
  userId                Int
  smokingIntervalTime   Int       // Representing smoking interval time in minutess

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

